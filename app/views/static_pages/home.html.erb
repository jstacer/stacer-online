<section class="content wow fadeInUp">
  <div class="row center">
    <div class="col-md-4 col-md-offset-1 col-sm-6 col-xs-8">
      <div class="block">
      	<%= image_tag("me.png", class: 'img-responsive', id: 'mug') %>
      </div>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12">
      <div class="block">
        <h1>
        	Hello. My name is Jud and I code for the web.
        </h1>
        <p>
        	Originally a	
        	<a href="http://grady.uga.edu/" target="_blank">
        		 journalism
        	</a>
        	major and newspaper copy editor, I am now
        	among a growing number of programmers with a 
        	<a href="http://blogs.wsj.com/experts/2016/06/01/why-i-was-wrong-about-liberal-arts-majors/" 
        	   target="_blank">
        		 liberal arts
        	</a>
        	degree. I write, I code, I have an eye 
        	for design, and I take pride in my
          <!-- Trigger the Modal -->
					<a id="link">creativity.</a>
					Thanks for visiting,
        	and feel free to connect with me.
        </p>
        <ul class="download-btn">
          <li>
          	<%= link_to resume_path, class: 'btn btn-default btn-resume' do %>
          		<%= fa_icon "suitcase", text: "Resume" %>
          	<% end %>
          </li>
          <li>
          	<%= link_to projects_path, class: 'btn btn-default btn-projects' do %>
          		<%= fa_icon "file-code-o", text: "Projects" %>
          	<% end %>
          </li>
        </ul>
      </div>
    </div>

    <!-- The Modal stays hidden until JQuery triggered by #link-->
    <div id="myModal" class="modal animated">
      <!-- Modal Content (The Image) -->
      <%= image_tag("pumpkin.png", class: "modal-content") %>
    </div>
  </div>
</section>

<script>
  // Modal in home.html.erb
  // Get elements
  var modal = document.getElementById('myModal');
  var link = document.getElementById('link');

  $.fn.extend({
    animateCss: function (animationName) {
      var animationEnd = 'webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend';
      this.addClass('animated ' + animationName).one(animationEnd, function() {
        $(this).removeClass('animated ' + animationName);
      });
    }
  });

  // Display modal
  link.onclick = function() {
    modal.style.display = "block";
    $('#myModal').animateCss('bounceIn');

    // wait for click to close
    $("#myModal").on("click", function() {
      modal.style.display = "none";
    });
  }
</script>